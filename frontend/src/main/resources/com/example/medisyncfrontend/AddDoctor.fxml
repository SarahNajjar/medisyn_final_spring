<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.medisyncfrontend.Controllers.AddDoctorController"
      spacing="12" alignment="CENTER" style="-fx-padding: 30;" prefWidth="500" prefHeight="400">

    <Label text="Add Doctor" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <TextField fx:id="firstNameField" promptText="First Name" />
    <TextField fx:id="lastNameField" promptText="Last Name" />
    <TextField fx:id="specializationField" promptText="Specialization" />
    <TextField fx:id="contactNumberField" promptText="Contact Number" />
    <TextField fx:id="percentageField" promptText="Percentage (e.g., 50)" />

    <HBox spacing="15" alignment="CENTER">
        <Button text="Save" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>

